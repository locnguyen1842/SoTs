{
    "name": "Search on This Site",
    "version": "1.0",
    "description": "Search selected text on current site",
    "author" : "Loc Nguyen",
    "background": {
        "scripts": ["background.js"]
    },
    "page_action": {
        "default_icon": {
            "16": "images/search16.png",
            "32": "images/search32.png",
            "48": "images/search64.png"
        }
    },
    "icons": {
        "16": "images/search16.png",
        "32": "images/search32.png",
        "48": "images/search64.png"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "permissions": ["activeTab","contextMenus"],
    "manifest_version": 2
  }